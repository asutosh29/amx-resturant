<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs') %>
        <title>Restro | Payment</title>
    <style>
        
    </style>
</head>

<body>
    <%- include('./partials/navbar.ejs') %>
        <div class="container mt-5">
            <h1>Payment Page</h1>
            <div class="container box-shadow p-3">
                <div class="order-details box-shadow p-3 my-2">
                    <h6>Your order ID: <%= orderID %>
                    </h6>
                    <h6>Your order status is: <%= orderDetails[0].order_status %>
                    </h6>
                    <h6>Your table number is: <%= tableID %>
                    </h6>
                </div>
                <a href="/user/orders"><button class="btn btn-sm btn-primary" type="submit">See All order!</button></a>

                <h2>Ordered Items</h2>
                <div class="container d-flex justify-content-center box-shadow p-2">
                    <% orderDetails.forEach(item=> { %>
                        <div class="card m-3" style="width: 18rem;" id="item-<%= item.item_id %>">
                            <img src="/images/items/default.jpg" class="card-img-top" alt="<%= item.item_name %>">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= item.item_name %>
                                        <%= 1===item.isVeg ? "ðŸŸ¢" : "ðŸ”´" %>
                                </h5>
                                <p class="card-text">
                                    <%= item.item_description %>
                                </p>
                            </div>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">Price: <%= item.price %>
                                </li>
                                <li class="list-group-item">Qty: <%= item.qty %>
                                </li>
                            </ul>
                        </div>
                        <% }) %>
                </div>
            </div>
        </div>

        <%- include('./partials/scripts.ejs') %>
</body>

</html>