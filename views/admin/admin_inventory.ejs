<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs') %>
        <title>Restro | Admin</title>
</head>

<body>
    <div class="container mt-5">
        <%- include('../partials/navbar.ejs') %>
            <h1>Manage Inventory</h1>
            <div class="d-flex flex-wrap justify-content-center gap-2">
                <% items.forEach(item=> { %>
                    <% if (true) { %>
                        <div class="card m-3" style="width: 18rem;">
                            <img src="/images/items/default.jpg" class="card-img-top" alt="<%= item.item_name %>">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= item.item_name %>
                                        <%= 1===item.isVeg ? "ðŸŸ¢" : "ðŸ”´" %>
                                </h5>
                                <p class="card-text">
                                    <%= item.item_description %>
                                </p>
                            </div>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">Price: <%= item.price %>
                                </li>
                                <li class="list-group-item">Category: <%= item.category_name %>
                                </li>
                                <li class="list-group-item">Available: <%= 1===item.isAvailable ? "YES âœ…" : "NO âŒ" %>
                                </li>
                            </ul>
                            <div class="card-body">
                                <submit class="btn btn-sm btn-success available" id="<%= item.item_id %>">Mark Available
                                </submit>
                                <submit class="btn btn-sm btn-danger unavailable" id="<%= item.item_id %>">Mark
                                    Unvailable
                                </submit>
                            </div>
                        </div>
                        <% } %>
                            <% }) %>
            </div>
    </div>

    <%- include('../partials/scripts.ejs') %>
        <script>
            const availableBtns = Array(...document.getElementsByClassName("available"))
            const unavailableBtns = Array(...document.getElementsByClassName("unavailable"))
            availableBtns.forEach(btn => {
                btn.addEventListener('click', (e) => {
                    const itemId = e.target.id
                    const body = {
                        itemId: itemId,
                        isAvailable: 1
                    }
                    const payload = JSON.stringify(body)
                    fetch(`/item`, {
                        method: "PATCH",
                        headers: {
                            "Content-Type": "application/json",
                        },
                        body: payload
                    })
                        .then(response => response.json())
                        .then(response => {
                            console.log(response)
                            location.reload()
                        })
                        .catch(error => {
                            console.error(e)
                        });
                })
            });
            
            unavailableBtns.forEach(btn => {
                btn.addEventListener('click', (e) => {
                    const itemId = e.target.id
                    const body = {
                        itemId: itemId,
                        isAvailable: 0
                    }
                    const payload = JSON.stringify(body)
                    fetch(`/item`, {
                        method: "PATCH",
                        headers: {
                            "Content-Type": "application/json",
                        },
                        body: payload
                    })
                        .then(response => response.json())
                        .then(response => {
                            console.log(response)
                            location.reload()
                        })
                        .catch(error => {
                            console.error(e)
                        });
                })
            });


        </script>
</body>

</html>